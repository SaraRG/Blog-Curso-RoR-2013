<p>
  <b>Autor:</b>
  <%= @post.user.username %>
</p>

<p>
  <b>Título:</b>
  <%= @post.title %>
</p>

<p>
  <b>Contenido:</b>
  <%= @post.content %>
</p>

<h2>Commentarios</h2>
<%= render @post.comments %>

<h2>Añadir Comentarios:</h2>
<%= form_for([@post, @post.comments.build]) do |f| %>
  <div class="field">
    <%= f.label :Usuario %>
    <%= f.text_field :commenter %> 
  </div>
  <div class="field">
    <%= f.label :Comentario %>
    <%= f.text_area :body, class: "tinymce"  %> 
  </div>
  <div class="actions">
    <%= f.submit "Comentar", class: :"btn btn-primary active" %>
  </div>
<% end %>

<%= link_to 'Editar', edit_post_path(@post), class: :"btn btn-warning active" %> 
<%= link_to 'Atrás', posts_path, class: :"btn btn-danger active" %>

<%= tinymce %>
