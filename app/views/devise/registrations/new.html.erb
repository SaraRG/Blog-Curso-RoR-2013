 <div style="text-align:center">
<h2>¡Regístrate!</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>


  <div class="form-inputs">
    <%= f.input :email, :required => true, :autofocus => true, label: 'Correo Electrónico', placeholder: 'user@dominio.com' %>
    <%= f.input :name, :required => true, :autofocus => true, label: 'Nombre de Usuario', placeholder: 'Escoge tu nombre de usuario' %>
    <%= f.input :password, :required => true, label: 'Contraseña', placeholder: 'Introduce tu contraseña' %>
    <%= f.input :password_confirmation, :required => true, label: 'Confirmación de la Contraseña', placeholder: 'Repite tu contraseña, por favor'  %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Crear Usuario", :class => 'btn-primary' %>
	<%= link_to 'Cancelar', session_path(resource_name), class: "btn btn-danger active"%>
  </div></div>
<% end %>
