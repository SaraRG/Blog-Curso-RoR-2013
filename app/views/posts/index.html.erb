<div style="text-align:center">
<h1>Lista de Post</h1>

 <%= paginate @posts, :theme => 'twitter-bootstrap' %>

<table class="table table-striped">
  <tr>
    <th>Autor</th>
    <th>Título</th>
    <th>Contenido</th>
    <th>¿Publicado?</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>


<% @posts.each do |post| %>
  <tr>
    <td><%= post.user.username unless post.user.blank? %></td>
    <td><%= post.title %></td>
    <td><%= post.content.html_safe %></td>
    <% if  post.published == true %>
      <td>Sí</td>
    <% else %>
      <td>No</td>
    <% end %>
    <td><%= link_to 'Mostrar', post , class: :"btn btn-small btn-info active"%></td>
    <% if (current_user.username == post.user.username)%>
      <td><%= link_to 'Editar', edit_post_path(post), class: :"btn btn-small btn-warning active" %></td>
      <td><%= link_to 'Eliminar', post, method: :delete, data: { confirm: "¿Seguro que desea eliminar este post?" }, class: :"btn btn-small btn-danger active" %></td>
    <%end%>
  </tr>
<% end %>
</table>
<%= link_to 'Ver PDF', posts_path(:pdf), class: :"btn btn-success active"  %>
<%= link_to 'Nuevo Post', new_post_path, class: :"btn btn-primary active" %>
</div>
