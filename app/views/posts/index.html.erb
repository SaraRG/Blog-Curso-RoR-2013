<div style="text-align:center">
<h1>Lista de Post</h1>

 <%= paginate @posts, :theme => 'twitter-bootstrap' %>

<table class="table table-striped">
  <tr>
    <th>Autor</th>
    <th>Título</th>
    <th>Contenido</th>
    <th>¿Publicado?</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.name %></td>
    <td><%= post.title %></td>
    <td><%= post.content %></td>
    <td><%= post.published %></td>
    <td><%= link_to 'Mostrar', post %></td>
    <td><%= link_to 'Editar', edit_post_path(post) %></td>
    <td><%= link_to 'Eliminar', post, method: :delete, data: { confirm: "¿Seguro que desea eliminar este post?" } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nuevo Post', new_post_path, class: :"btn btn-primary active" %>
</div>
