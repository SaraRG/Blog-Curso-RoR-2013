<% if !current_user %>
<div class='navbar-inner'> <!-- <div class='navbar-inner'> -->
    <div style="text-align:center">

    <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :class => 'form-horizontal') do |f| %>
      <div class="form-inputs">
        <%= f.input :email, :required => false, :autofocus => true, placeholder: 'user@domain.com', autocomplete: "on", label: 'Correo electrónico' %>
        <%= f.input :password, :required => false, placeholder: 'Introduzca su contraseña', label: 'Contraseña'%>
        <%= f.check_box :remember_me,:as => :boolean if devise_mapping.rememberable? %> Recordar mis datos
      </div>

      <div class="actions">
        <%= f.submit "Iniciar Sesión", class: :"btn btn-primary active"%>
      </div>
    <% end %>

    <br>

    <%= link_to "¿Eres nuevo? Regístrate", new_user_registration_path %>
    </div>
  </div>

<% end %>