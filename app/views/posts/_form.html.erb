<div align="center">

<%= tinymce %>


<%= simple_form_for(@post, :html => {:class => 'well'}) do |f|  %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-inputs">
    <%= f.input :title, input_html: { class: 'input-xlarge'}, label: 'Título'%>
    <%= f.input :content, input_html: { class: 'tinymce'}, label: 'Contenido'%>
  </div>

  <div class="field">
    <%= f.label :¿Publicar? %> 
    <%= f.check_box :published %>
  </div>

  <div class="actions">
    <%= f.submit "Enviar", class: :"btn btn-primary active"%>
    <%= link_to 'Cancelar', posts_path, class: :"btn btn-danger active"%>
    <% session[:url_anterior_edit] = nil %>
  </div>
<% end %>

</div>